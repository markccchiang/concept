# This is a parameterfile to the N-body code.
# Parameters can be specified as any valid Python3 expression.
# Units defined in the units module as well as Numpy functions
# and constants can be used.

# Numerical parameters
boxsize = 100*Mpc                      # Linear size of the simulation box
ewald_gridsize = 64                    # Linear size of the grid of Ewald corrections
PM_gridsize = 128                      # Linear size of the grid used for the PM method
softening = 10*kpc                     # Softening length

# Cosmological parameters
H0 = 70*km/s/Mpc                       # The Hubble constant
Ωm = 0.3                               # Density parameter for matter
ΩΛ = 0.7                               # Density parameter for dark energy
a_begin = 0.000015                     # Scale factor at beginning of simulation
a_end = 1                              # Scale factor at end of simulation

# Graphics
image_format='png'                     # The image format of the saved frames
framefolder = 'frames'                       # Folder to save frames
liveframe=''                 # Filename of saved live frame
tmp = 'jmd@lifa.phys.au.dk:/usr/users/jmd/public_html/master/simulation.png'
scp_liveframe=''                       # Where to scp the live frame
framespace = 1                         # The plot is updated every framespace time step



###############################################
# Additional information about the parameters #
###############################################
############
# Graphics #
############
# image_format
#     Supported formats are eps, pdf, pgf, png, ps, raw, rgba, svg, svgz.
# frame_folder
#     Use empty string to not save the frames.
# liveframe
#     The filename should be without extension.
#     Use an empty string to disable this feature.
# scp_liveframe
#     This should be of the form 'user@host:/path/to/liveframe.ext'.
#     The live frame can not be scp'ed if liveframe is disabled.
#     Use an empty string to disable this feature.
